{
  "name": "playwright-tags-login",
  "version": "1.0.0",
  "description": "Tagged Playwright tests for login page functionality",
  "scripts": {
    "test:smoke": "playwright test --grep '@smoke'",
    "test:critical": "playwright test --grep '@critical'",
    "test:high": "playwright test --grep '@high'",
    "test:regression": "playwright test --grep '@regression'",
    "test:integration": "playwright test --grep '@integration'",
    "test:unit": "playwright test --grep '@unit'",
    "test:security": "playwright test --grep '@security'",
    "test:accessibility": "playwright test --grep '@accessibility'",
    "test:performance": "playwright test --grep '@performance'",
    "test:ui": "playwright test --grep '@ui'",
    "test:validation": "playwright test --grep '@validation'",
    "test:authentication": "playwright test --grep '@authentication'",
    "test:fast": "playwright test --grep '@fast'",
    "test:slow": "playwright test --grep '@slow'",
    "test:chrome": "playwright test --grep '@chrome'",
    "test:firefox": "playwright test --grep '@firefox'",
    "test:mobile": "playwright test --grep '@mobile'",
    "test:staging": "playwright test --grep '@staging'",
    "test:production": "playwright test --grep '@production'",
    "test:exclude-flaky": "playwright test --grep '@flaky' --grep-invert",
    "test:exclude-slow": "playwright test --grep '@slow' --grep-invert",
    "test:positive": "playwright test --grep '@positive'",
    "test:negative": "playwright test --grep '@negative'",
    "test:boundary": "playwright test --grep '@boundary'",
    "test:admin": "playwright test --grep '@admin'",
    "test:user": "playwright test --grep '@user'",
    "test:guest": "playwright test --grep '@guest'",
    "test:parallel": "playwright test --grep '@parallel'",
    "test:serial": "playwright test --grep '@serial'",
    "test:all": "playwright test",
    "test:help": "node run-tagged-tests.js help",
    "test:list-tags": "node run-tagged-tests.js list-tags",
    "test:list-combinations": "node run-tagged-tests.js list-combinations",
    "test:list-profiles": "node run-tagged-tests.js list-profiles"
  },
  "keywords": [
    "playwright",
    "testing",
    "tags",
    "login",
    "automation",
    "e2e"
  ],
  "author": "Test Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}
